}
.ticket .title{
  color:black;
}
.ticket .remark{
  font-size: 26rpx;
  border-top: 2rpx solid #f0f0f0;
}


.bottomfix{
  position: fixed;
  background: #BF8436;
  bottom: 0rpx;
  width:750rpx;
  color:white;
  text-align: center;
  padding-top:40rpx;
  padding-bottom:40rpx;
}

