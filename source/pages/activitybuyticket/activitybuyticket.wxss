.cover{
  width:235rpx;
  height: 140rpx;
}
.bottom-price{
  position: absolute;
  right:20rpx;
  top:130rpx;
  font-size: 28rpx;
}
.ticket{
  margin-bottom: 30rpx;
  border:4rpx solid #f0f0f0;
  border-radius: 10rpx;
}
.ticket.selected{
