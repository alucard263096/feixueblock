/* pages/livemeeting/livemeeting.wxss */
.trailer{
  background: black;
  width: 100vw;
  height: 56.7vw;
}
.hosterinfo{
  padding:3vh;
  border-bottom: 2px solid #f2f2f2;
}
.hosterinfomorertmp{
  margin-top: 13.7vw;
}
.hosterphoto{
  width: 80rpx;
  height:80rpx;
  border-radius: 50%;
}
.hostername{
  font-size: 14px;
  color:black;
  margin-top: 3px;
}
.hosterintroduce{
  font-size: 10px;
  margin-top: 5px;
  color:#999;
}
.hosterfocus{
  
  margin-top: 3px;
}
.bottomtabs{
  height:calc( 100vh - 712rpx );
}
.bottomtabsmorertmp{
  height:calc( 100vh - 712rpx - 13.6vw );
}
.introducepic{
  width: 100vw;
}
.tabs{
  /*box-shadow: 0px 2px 2px #888888;*/
}
.tab{
  text-align: center;
  font-size: 22rpx;
}
.tab .tabtext{
  padding-top:4px;
  padding-bottom:4px;
}
.tab .active{
  border-bottom: 3px solid #BF8436;
  color:#BF8436;
}
.commentname{
  font-size: 12px;
}
.commenttext{
  font-size: 12px;
  color:black;
}

.play{
  position: fixed;
  width: 60rpx;
  height: 60rpx;
  top: 45vw;
  left: 20rpx;
}
.infullplay{
  bottom:20rpx;
  left: 20rpx;
}

.fullscreen{
  position: fixed;
  width: 60rpx;
  height: 60rpx;
  top: 45vw;
  right: 20rpx;
}
.infullscreen{
  bottom:20rpx;
  right: 20rpx;
}
.infullscreenvideo{
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
}

.mostrtmp{
  background: #111111;
  
}
.littleplayer{
  width:24vw;
  height:13.6vw;
  margin-left: 6rpx;
}
.topicbar{
  height:81%;
  padding:5px;
  background-color:#f2f2f2;
}
.bottomtabsmorertmp .topicbar{
  height: 75%;
}
.icon{
  width: 16px;
  height: 16px;
  margin-left: 10px;
}
.icontxt{
  margin-left: 5px;
  font-size: 12px;
  margin-top: 6px;
  color:#BF8436;
  line-height: 0rpx;
}

.video_cover{
  width: 140rpx;
}
.idt{
  height: 2rpx;
  background: #f2f2f2;
}
.video_title{
  font-size: 32rpx;
}
.video_bottom_info{
  margin-top: 5rpx;
}
.video_clock{
  width:28rpx;
  height: 32rpx;
}
.video_playtime{
  font-size: 24rpx;
  margin-top: 6rpx;
  margin-left: 6rpx;
  color:#999;
}
.video_click{
  background-color: #f4f4f4;
}
.video_playnow{
  font-size: 28rpx;
}
.avatar{
  width: 50rpx;
  height:50rpx;
  border-radius: 50rpx;
}

.nickname{
  font-size: 24rpx;
  margin-top: 8rpx;
  margin-left: 10rpx;
}