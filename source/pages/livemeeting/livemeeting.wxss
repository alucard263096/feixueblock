.trailer{
  background: black;
  width: 100vw;
  height: 56.7vw;
}
.hosterinfo{
  padding:3vh;
  border-bottom: 2px solid #f2f2f2;
}
.hosterinfomorertmp{
  margin-top: 13.7vw;
}
.hosterphoto{
  width: 120rpx;
  height:120rpx;
  border-radius: 50%;
}
.hostername{
  font-size: 16px;
  color:black;
  margin-top: 7px;
}
.hosterintroduce{
  font-size: 12px;
  margin-top: 5px;
}
.hosterfocus{
  
  margin-top: 12px;
}
.bottomtabs{
  height:calc( 100vh - 706rpx );
}
.bottomtabsmorertmp{
  height:calc( 100vh - 706rpx - 13.6vw );
}
.introducepic{
  width: 100vw;
}
.tabs{
  /*box-shadow: 0px 2px 2px #888888;*/
}
.tab{
  text-align: center;
  font-size: 14px;
}
.tab .tabtext{
  padding-top:10px;
  padding-bottom:10px;
}
.tab .active{
  border-bottom: 3px solid #1AAD19;
  color:#1AAD19;
}
.commentname{
  font-size: 12px;
}
.commenttext{
  font-size: 12px;
  color:black;
}

.fullscreen{
  position: fixed;
  width: 60rpx;
  height: 60rpx;
  top: 45vw;
  right: 20rpx;
}
.infullscreenvideo{
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
}

